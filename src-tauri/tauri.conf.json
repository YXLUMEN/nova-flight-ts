{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nova-flight",
  "version": "0.1.1",
  "identifier": "com.lumen.nova-flight",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "title": "Nova Flight",
        "width": 1208,
        "height": 752,
        "minWidth": 771,
        "minHeight": 752,
        "resizable": true,
        "fullscreen": true,
        "center": true,
        "zoomHotkeysEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "freezePrototype": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
