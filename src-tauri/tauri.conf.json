{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nova-flight",
  "version": "0.1.20",
  "identifier": "com.lumen.nova-flight",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "title": "Nova Flight",
        "width": 1208,
        "height": 752,
        "minWidth": 771,
        "minHeight": 752,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "zoomHotkeysEnabled": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' asset: http://asset.localhost ipc: http://ipc.localhost"
      },
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**/*"
        ]
      },
      "freezePrototype": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "resources": {
      "../resources/": "resources/"
    },
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "basicUi"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI2REU3QUJBRUEwRjJFRkQKUldUOUxnL3F1bnJldGpncXQweDZyUGw4TUJhVDdYMXRHc2dTTWZlL2NFVlh6NjdPckVDcnlia2IK",
      "endpoints": [
        "https://www.yangandxu.asia/app/nova-flight/latest.json"
      ]
    }
  }
}
